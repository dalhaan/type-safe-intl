{
  "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*", "**/*.test.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "types",
    "noPropertyAccessFromIndexSignature": false,
    "jsx": "react",
    "lib": ["DOM"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
